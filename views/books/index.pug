extends ../layout

block content
  form(action="/books/search", method="post")
      input(type="text", name="search" placeholder="Enter your search")
      input(type="submit" class="button search" value="Search")
  p
    a(href="/books/new", class="button") Create New Book
  table
    thead
      tr
        th="Title"
        th="Author"
        th="Genre"
        th="Year"
    tbody
      each book in books
          tr
            td
              a(href = "/books/" + book.id)=book.title
            td=book.author
            td=book.genre
            td=book.year
    p
      script
        include script.js
      
      - var number = 0;

      a(onclick='getQueryVariable('+ number +')', href="/books/?page=" + number class="button" id="btnPrev" ) Previous  

      a(onclick='getQueryVariable('+ number +')', href="/books/?page=" + number, class="button" id="btnNext" style="margin-left: 10px") Next
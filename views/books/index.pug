extends ../layout

block content
  form(action="/books/search", method="post")
      input(type="text", name="search" placeholder="Enter your search")
      input(type="submit" class="button search" value="Search")
  p
    a(href="/books/new", class="button") Create New Book
  table
    thead
      tr
        th="Title"
        th="Author"
        th="Genre"
        th="Year"
    tbody
      each book in books
          tr
            td
              a(href = "/books/" + book.id)=book.title
            td=book.author
            td=book.genre
            td=book.year
    p(class="pagination")

      a(href="/books/pages/" + prevPage class="button") Prev

      a(href="/books/pages/" + nextPage class="button") Next